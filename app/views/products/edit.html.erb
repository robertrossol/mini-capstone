<h1>Edit Product</h1>
<%= form_tag "/products/#{@product.id}", method: :patch do %>
  <div class="form-group">
    Name: <input type='text' class="form-control" value="<%= @product.name %>" name="form_name">
  </div>
  <div class="form-group">
    Price: <input type='text' class="form-control" value="<%= @product.price %>" name="form_price">
  </div>
  <div class="form-group">
    Image: <input type='text' class="form-control" value="<%= @product.image %>" name="form_image">
  </div>
  <div class="form-group">
    Description: <input type='text' class="form-control" value="<%= @product.description %>" name="form_description">
  </div>
  <input type ="submit" value="Update Product Info">
<% end %>
<h1>New Product</h1>
<%= form_tag "/products", method: :post do %> <!-- :method => :post -->
  <div class="form-group">
    Name: <input class="form-control" type='text' name="form_name">
  </div>
  <div class="form-group">
    Price: <input class="form-control" type='text' name="form_price">
  </div>
  <div class="form-group">
    Description: <input class="form-control" type='text' name="form_description">
  </div>Supplier ID: 
  <select class="form-control" name="form_supplier">
    <option disabled selected>Select an Option</option>
    <option value=1>1 Nintendo</option>
    <option value=2>2 Sony</option>
  </select>
  <input type ="submit" value="Create Product">
<% end %>
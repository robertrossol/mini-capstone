<h1>New Image for <%= @product.name %></h1>
<%= form_tag "/images", method: :post do %> <!-- :method => :post -->
  <div class="form-group">
    Url: <input class="form-control" type='text' name="url">
  </div>
  <div class="form-group">
    <input class="form-control" type='hidden' name="product_id" value="<%=@product.id%>">
  </div>
  <input type ="submit" value="Add Another Image">
<% end %>
<div><a href="/products/<%=@product.id%>">Done Adding Images</a></div>
